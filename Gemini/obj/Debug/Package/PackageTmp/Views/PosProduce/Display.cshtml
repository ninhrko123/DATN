    <script>
        var currentUrl = location.pathname;
        var menus = $('#menu > li > a[href="' + currentUrl + '"]');
        if (menus && menus.length > 0) {
            var li = menus[0].parentNode;
            li.classList.add("active");
        }

        const firstContenReAuthenHtml = $('#contentReAuthen').html();
        function reAuthenBigchainDB() {
            $("#preloder").fadeIn();
            $(".loader").delay(200).fadeIn("slow");
            var guidPosProcess = '@Model.PosProcess.Guid';

            $.post('@Url.Action("ReAuthenBigchainDB", "PosProcess")', { guid: guidPosProcess, transId: '@Model.PosProcess.BigchainDBTransactionId' },
                function (dataResponse) {
                    $(".loader").fadeOut();
                    $("#preloder").delay(200).fadeOut("slow");

                    if (dataResponse.StatusCode == 200) {
                        $('#imgFirewallSuccess').show();
                        $('#imgFirewallFail').hide();

                        $('#myModalLabel').text('Xác thực thất bại');
                        $('#myModalLabel').removeClass('text-red');

                        $('#contentReAuthen').html(firstContenReAuthenHtml);

                        setTimeout(function () {
                            $("#popup").modal();
                        }, 200);
                    } else {
                        $('#imgFirewallSuccess').hide();
                        $('#imgFirewallFail').show();

                        $('#myModalLabel').text('Xác thực thất bại');
                        $('#myModalLabel').addClass('text-red');

                        $('#contentReAuthen').html(dataResponse.MessagError);

                        setTimeout(function () {
                            $("#popup").modal();
                        }, 200);
                    }
            })
        }
    </script>
